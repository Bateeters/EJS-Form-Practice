<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
</head>
<body>
    <h1><%= title %></h1>
    <a href="/create">Create a user</a>

    <form action="/search" method="GET">
        <input type="text" name="query" placeholder="Search by name or email">
        <button type="submit">Search</button>
    </form>

    <ul>
        <% if (locals.users) {%>
            <% users.forEach(function(user) { %>
            <li>ID: <%= user.id %>, Name: <%= user.firstName %> <%= user.lastName %> Email: <%= user.email %> Age: <%= user.age %>
                <br>
                Bio: <%= user.bio %>
            </li>
            <a href="/<%= user.id %>/update">Update</a>
            <form action="/<%= user.id %>/delete" method="POST" style="display:inline;">
                <button type="submit" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
            </form>
            <% }); %>
        <% } %>
    </ul>

</body>
</html>
